{
    "name": "cavatappi/infrastructure",
    "description": "Framework built around Domain Driven Design and Event Sourcing",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Evan Hildreth",
            "email": "me@eph.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "Cavatappi\\Infrastructure\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cavatappi\\Infrastructure\\Test\\": "src-test/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.4",
        "psr/container": "^2.0",
        "psr/event-dispatcher": "^1.0",
        "crell/tukio": "^2.0",
        "psr/log": "^3.0",
        "cavatappi/foundation": "^0.1.1",
        "phpseclib/phpseclib": "^3.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "cavatappi/testing": "^0.1.1"
    },
    "provide": {
        "psr/container-implementation": "^2.0"
    },
    "scripts": {
        "test": "phpunit",
        "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
        "lintfix": "./vendor/squizlabs/php_codesniffer/bin/phpcbf"
    }
}
